{
  "manifest_version": 3,
  "name": "Minimal Test Extension",
  "version": "1.0.0",
  "description": "Minimal test extension",
  
  "permissions": [
    "storage",
    "activeTab"
  ],
  
  "host_permissions": [
    "http://localhost:8080/*"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Minimal Test"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["http://localhost:8080/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
} 